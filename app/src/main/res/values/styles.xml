<resources>

    <!-- Day Theme -->
    <style name="ThemeDay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#fcfcfc</item>
        <item name="colorCard">#ffffff</item>
        <item name="colorTextPrimary">#808080</item>
        <item name="colorTint">#000000</item>
        <item name="colorButton">#2196F3</item>
        <item name="android:navigationBarColor">#BDBDBD</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Night Theme -->
    <style name="ThemeNight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#303030</item>
        <item name="colorCard">#424242</item>
        <item name="colorTextPrimary">#ffffff</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#2196F3</item>
        <item name="android:navigationBarColor">#424242</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Animation on page reopen -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

</resources>
